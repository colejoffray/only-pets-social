
    <div class="col s6 offset-s3">
        <div class="profile-info">
            <div class="row profile-header">
                {{#if user.profilePic}}
                <div class="profilePic">
                    <img src="{{user.profilePic}}" alt="profilePic" class="responsive-img circle small-profile-pic">
                </div>
                {{else}}
                <div class="profilePic">
                    <img src="/assets/blank-profile-circle.png" alt="profilePic" class="responsive-img circle small-profile-pic">
                </div>
                {{/if}}
                <h4>{{{user.userName}}}</h4>
            </div>
            
            <div class="stats">
                <span class="stats-item">Posts: {{posts.length}}</span>
                <span class="stats-item">Followers: {{user.followedBy.length}}</span>
            </div>
            <div class="stats">
                <p>{{user.bio}}</p>
            </div>
            <div>
                <a href="/profile/edit/{{user._id}}" class="btn">Edit Profile</a>
            </div>
            
        </div>

        <div class="divider"></div>

        <!-- User Posts -->
        {{#each posts}}
        <div class="col s3 user-posts" onmouseover="showOverlay(this)" onmouseout="hideOverlay(this)">
                <img src="{{image}}" class="responsive-img" alt="Post">
                <div class="overlay">
                    <button class="edit-btn" onclick="editPost('{{_id}}')"><i class="fa-solid fa-pen-to-square"></i></button>
                    <button class="delete-btn" onclick="confirmDelete('{{_id}}')"><i class="fa-solid fa-trash"></i></button>
                </div>
        </div>
        {{/each}}
    </div>
    