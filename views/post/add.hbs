<h3>Create a New Post!</h3>
<div class="row">
    <form action="/post" enctype="multipart/form-data"  method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="file" id="imageUpload" name="image">
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="text" id="caption" name="caption">
                <label for="caption">Caption</label>
            </div>
        </div>
        <div class="row">
            <div class="row">
            <input type="submit" value="Post" class="btn red">
            <a href="/feed" class="btn grey">Cancel</a>
        </div>
        </div>
    </form>
    

    